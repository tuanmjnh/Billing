<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Billing</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Bảng giá", "Index", "BangGiaCuoc", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Khuyến mại - Giảm giá", "Index", "Discount", new { area = "" }, null)</li>
                    <li>
                        <a href="javascript:;">Tính Cước</a>
                        <ul>
                            <li>@Html.ActionLink("Xử lý chung", "Index", "GeneralProcess", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Mega", "Index", "Mega", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Fiber", "Index", "Fiber", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("MyTV", "Index", "MyTV", new { area = "" }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Xuất DBF", "Index", "ExportDBF", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("File Manager", "Index", "FileManager", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("Message")
        <div id="TMAlert"></div>
        @RenderBody()
        <div class="clearfix"></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/extrajs")
    @RenderSection("scripts", required: false)
    @RenderSection("ScriptForm", required: false)
    @RenderSection("ScriptList", required: false)
</body>
</html>
