@model Billing.Models.DISCOUNT

@{
    ViewBag.Title = "Quản lý giảm giá";
    ViewBag.ContentTitle = "Nhập mới giảm giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "Discount", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <hr />
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Nhập thông tin</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group required">
                        <label class="control-label setting-label col-md-3" for="ACCOUNT">Account</label>
                        <div class="col-md-9 asterisk">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
                                <input class="form-control text-box single-line" id="ACCOUNT" name="ACCOUNT" type="text" value="@Html.DisplayFor(m=>m.ACCOUNT)"
                                       data-val="true" data-val-required="Vui lòng nhập Account"
                                       data-val-remote="Account đã tồn tại!" data-val-remote-additionalfields="*.ACCOUNT"
                                       data-val-remote-type="POST" data-val-remote-url="@Url.Action("check_exist","Discount")">
                            </div>
                            <span class="field-validation-valid text-danger" data-valmsg-for="PROFILE" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label setting-label col-md-3" for="NGAY_DK">Ngày bắt đầu</label>
                        <div class="col-md-9 asterisk">
                            <div class="input-group date startDate">
                                <input type="text" class="form-control" id="NGAY_DK" name="NGAY_DK" autocomplete="off" placeholder="Nhập ngày bắt đầu" data-toggle="tooltip" data-placement="bottom" title="Nhập ngày bắt đầu" value="@Html.DisplayFor(m=>m.NGAY_DK)" />
                                <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label setting-label col-md-3" for="NGAY_BD">Ngày bắt đầu</label>
                        <div class="col-md-9 asterisk">
                            <div class="input-group date startDate">
                                <input type="text" class="form-control" id="NGAY_BD" name="NGAY_BD" autocomplete="off" placeholder="Nhập ngày bắt đầu" data-toggle="tooltip" data-placement="bottom" title="Nhập ngày bắt đầu" value="@Html.DisplayFor(m=>m.NGAY_BD)" />
                                <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label setting-label col-md-3" for="NGAY_KT">Ngày kết thúc</label>
                        <div class="col-md-9 asterisk">
                            <div class="input-group date endDate end_at">
                                <input type="text" class="form-control" id="NGAY_KT" name="NGAY_KT" autocomplete="off" placeholder="Nhập ngày kết thúc" data-toggle="tooltip" data-placement="bottom" title="Nhập ngày kết thúc" value="@Html.DisplayFor(m=>m.NGAY_KT)" />
                                <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.Partial("PanelFooterNotes")
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Ghi chú</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea id="desc" name="desc" class="tinymce">@(Model != null ? Html.Raw(Model.DETAILS) : null)</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Thực hiện</h3>
                </div>
                @*<div class="panel-body">
                    <div class="form-group option-label">
                        <label class="col-md-3" for="FLAG">Trạng thái</label>
                        <div class="checkbox">
                            <label><input type="radio" name="FLAG" value="1" @(Model != null ? (Model.FLAG == 1 ? "checked" : "") : "checked") /> @TM.Common.Language.active</label>
                            <label><input type="radio" name="FLAG" value="0" @(Model != null && Model.FLAG == 0 ? "checked" : "") /> @TM.Common.Language.draft</label>
                        </div>
                    </div>
                </div>*@
                <div class="panel-body">
                    <input type="submit" value="@TM.Common.Language.addnew" class="btn btn-primary" />
                    <a href="@Url.Action("Index")" class="btn btn-info">@TM.Common.Language.backlink</a>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("ImportFile", "Discount", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Import File (.dbf)</h3>
            </div>
            <div class="panel-body">
                <div class="form-group required">
                    <label class="control-label setting-label col-md-3" for="upload">File</label>
                    <div class="col-md-9">
                        <input type="file" name="upload" id="upload" class="file-upload" data-val="true"
                               data-val-required="Vui lòng chọn file" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="upload" data-valmsg-replace="true"></span>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <input type="submit" value="@TM.Common.Language.update" class="btn btn-primary" />
                <a href="@Url.Action("Index")" class="btn btn-info">@TM.Common.Language.backlink</a>
            </div>
        </div>
    </div>
}
@section ScriptForm { @Html.Partial("ScriptForm")}